<div class="text-center">
	<h1>So you've been photobombed.</h1>
	<p class="lead">Upload the bombed photo.</p>
</div>

<%= simple_form_for Photo.new do |f| %>
  <%= f.input :photo, as: :file, label: false %>
  <%= f.button :submit, "Go!", class: "hidden upload-photo" %>
<% end %>
<br>

<div class="progress hidden">
  <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
    <span class="sr-only">Upload in progress</span>
  </div>
</div>